# Production Environment Configuration
# BIA MiniMax Application
# ⚠️ CRITICAL: Update all placeholder values before deployment

# Database Configuration (Production)
# Use managed PostgreSQL service (e.g., AWS RDS, Azure Database, Supabase)
DATABASE_URL="postgresql://USERNAME:PASSWORD@PRODUCTION_HOST:5432/DATABASE_NAME?sslmode=require"
DB_HOST="PRODUCTION_HOST"
DB_PORT="5432"
DB_NAME="bia_minimax_prod"
DB_USER="PRODUCTION_DB_USER"
DB_PASSWORD="SECURE_PRODUCTION_PASSWORD"

# SSL/TLS Configuration (Required for production)
DB_SSL="true"
DB_SSL_REJECT_UNAUTHORIZED="true"

# Application Configuration
NODE_ENV="production"
PORT="3000"

# Session Configuration
# ⚠️ CRITICAL: Generate a cryptographically secure random string (min 32 characters)
# Use: openssl rand -base64 32
SESSION_SECRET="GENERATE_SECURE_RANDOM_STRING_HERE"

# CORS Configuration
# Set to your production domain(s)
CORS_ORIGIN="https://your-production-domain.com"

# Logging
LOG_LEVEL="info"

# Security Headers
HELMET_ENABLED="true"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Backup Configuration (Optional)
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# Monitoring & Observability (Optional)
# SENTRY_DSN="https://your-sentry-dsn"
# NEW_RELIC_LICENSE_KEY="your-new-relic-key"
# DATADOG_API_KEY="your-datadog-key"

# Email Configuration (Optional - for notifications)
# SMTP_HOST="smtp.your-provider.com"
# SMTP_PORT="587"
# SMTP_USER="your-smtp-user"
# SMTP_PASSWORD="your-smtp-password"
# SMTP_FROM="noreply@your-domain.com"

# Cloud Storage (Optional - for exports/backups)
# AWS_ACCESS_KEY_ID="your-aws-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret"
# AWS_REGION="us-east-1"
# S3_BUCKET="bia-minimax-backups"
